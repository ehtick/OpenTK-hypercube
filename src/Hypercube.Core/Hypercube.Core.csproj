<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <AssemblyTitle>HypercubeEngine</AssemblyTitle>
        <Version>1.0.1.0</Version>
        <FileVersion>1.0.1.0</FileVersion>

        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Debugging\Profiler\" />
      <Folder Include="Ecs\Component\" />
      <Folder Include="Ecs\Event\" />
      <Folder Include="Ecs\System\" />
      <Folder Include="Graphics\Rendering\Api\Exceptions\" />
      <Folder Include="Networking\Client\" />
      <Folder Include="Networking\Server\" />
      <Folder Include="Physics\" />
    </ItemGroup>

    <ItemGroup>
        <None Include="$(SolutionDir)../libs/**" Link="%(RecursiveDir)%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" Visible="false" />
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\Hypercube.Analyzers\Hypercube.Analyzers.csproj" />
      <ProjectReference Include="..\Hypercube.Mathematics\Hypercube.Mathematics.csproj" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" Version="2024.3.0" />
    </ItemGroup>

</Project>
